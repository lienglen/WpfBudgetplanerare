<Window x:Class="WpfBudgetplanerare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBudgetplanerare" xmlns:viewmodels="clr-namespace:WpfBudgetplanerare.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Incomes">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView
                    Grid.Row="0"
                    Grid.Column="0"
                    ItemsSource="{Binding Incomes}"
                    SelectedItem="{Binding SelectedIncome, Mode=TwoWay}"
                    DisplayMemberPath="Amount">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" />
                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category.Name}" />
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding ReceivedDate}" />
                            <GridViewColumn Header="Recurrence" DisplayMemberBinding="{Binding RecurrenceType}" />
                        </GridView>
                    </ListView.View>
                    
                </ListView>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="16" VerticalAlignment="Top">
                    
                    <TextBlock Text="Amount" FontWeight="Bold"/>
                    <TextBox Text="{Binding Path=NewIncome.Amount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>

                    <TextBlock Text="Category" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                        SelectedValue="{Binding Path=NewIncome.Category, Mode=TwoWay}"
                        DisplayMemberPath="Name" Margin="0,0,0,8"
                        ></ComboBox>

                    <TextBlock Text="Date" FontWeight="Bold"/>
                    <DatePicker Text="{Binding Path=NewIncome.ReceivedDate, Mode=TwoWay}"/>
                    

                    <TextBlock Text="Recurrence" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding RecurrenceTypes}"
                              SelectedValue="{Binding NewIncome.RecurrenceType, Mode=TwoWay}"></ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                    <Button Content="Add" Background="Green" Foreground="White" Command="{Binding AddIncomeCommand}" Margin="4" Padding="8"></Button>
                    <Button Content="Delete" Background="DarkRed" Foreground="White" Command="{Binding RemoveIncomeCommand}" Margin="4" Padding="8"></Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" Grid.Row="1">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Annual Salary:" FontWeight="Bold" FontSize="12"/>
                        <TextBox Text="{Binding AnnualSalary, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Annual Work Hours (h):" FontWeight="Bold" FontSize="12"/>
                        <TextBox Text="{Binding AnnualWorkHours, UpdateSourceTrigger=PropertyChanged}" Width="135"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </TabItem>
        
        <!--Fliken för utgifter-->
        
        <TabItem Header="Expenses" Height="20" VerticalAlignment="Top">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListView Grid.Column="0" Grid.Row="0"
                    ItemsSource="{Binding Expenses}"
                    SelectedItem="{Binding SelectedExpense, Mode=TwoWay}"
                    DisplayMemberPath="Amount">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" />
                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category.Name}" />
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding ExpenseDate}" />
                            <GridViewColumn Header="Recurrence" DisplayMemberBinding="{Binding RecurrenceType}" />
                        </GridView>
                    </ListView.View>
                    
                </ListView>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="16" VerticalAlignment="Top">
                    <TextBlock Text="Amount" FontWeight="Bold"></TextBlock>
                    <TextBox Text="{Binding Path=NewExpense.Amount, Mode=TwoWay}"></TextBox>

                    <TextBlock Text="Category" FontWeight="Bold"></TextBlock>
                    <ComboBox ItemsSource="{Binding Categories}"
                              SelectedValue="{Binding Path=NewExpense.Category, Mode=TwoWay}"
                              DisplayMemberPath="Name" Margin="0,0,0,8"
                              ></ComboBox>

                    <TextBlock Text="Date" FontWeight="Bold"></TextBlock>
                    <DatePicker Text="{Binding Path=NewExpense.ExpenseDate, Mode=TwoWay}"/>

                    <TextBlock Text="Recurrence" FontWeight="Bold"></TextBlock>
                    <ComboBox ItemsSource="{Binding RecurrenceTypes}"
                              SelectedItem="{Binding NewExpense.RecurrenceType, Mode=TwoWay}"></ComboBox>
                    
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="0,8,0,0">
                    <Button Content="Add" Background="Green" Foreground="White" Command="{Binding AddExpenseCommand}" Padding="8" Margin="4"></Button>
                    <Button Content="Delete" Background="DarkRed" Foreground="White" Command="{Binding RemoveExpenseCommand}" Padding="8" Margin="4"></Button>
                </StackPanel>
                
            </Grid>
        </TabItem>

        <!--Fliken för prognosen-->

        <TabItem Header="Forecast">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    
                    <RowDefinition Height="Auto"/>
                    
                    <RowDefinition Height="*"/>
                   
                </Grid.RowDefinitions>

                
                <TextBlock Grid.Row="0" Text="Monthly forecast"
                   FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,16"/>
                <DatePicker Grid.Row="0" HorizontalAlignment="Right"
                            SelectedDate="{Binding SelectedMonth}"
                            Margin="0,0,0,16"/>

                
               
               

                <Border Grid.Row="2" Background="#FFECECEC" CornerRadius="8"
                Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalIncome, StringFormat=Total inkomst: {0:C0}, ConverterCulture=sv-SE}" FontSize="16"/>
                        <TextBlock Text="{Binding TotalExpense, StringFormat=Totala utgifter: {0:C0}, ConverterCulture=sv-SE}" FontSize="16"/>
                        <TextBlock Text="{Binding MonthlyBalance, StringFormat=Prognos: {0:C0}, ConverterCulture=sv-SE}" 
                           FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </Grid>

        </TabItem>

    </TabControl>

</Window>
